<div>
	<table border="1" cellpadding="0" cellspacing="0">
	  <tr>
	  	<th>编号</th>
	  	<th>内容</th>
	  	<th>正常/异常</th>
	  	<th>确认内容</th>
	  	<th>测试结果</th>
	  	<th>实施日</th>
	  	<th>实施者</th>
	  	<th>标记</th>
	  	<th>再实施日</th>
	  	<th>再实施者</th>
      <th><button  data-toggle="modal" data-target="#myModal" width="30px">set default</button></th>
	  	
	  </tr>
	  <% @example.each_with_index do |example,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td>
          <% arr_array = example.content.split(",") %>
          <% str = nil %>
          <% arr_array.each do |item| %>
            <%= @arr[item]%>
            <br/>
          <% end %>
        </td>
        <td><%= example.status %></td>
        <td><%= example.affirm %></td>
        <td><%= example.result %></td>
        <td><%= example.implement_time %></td>
        <td><%= example.implement_people %></td>
        <td><%= example.remark %></td>
        <td><%= example.again_implement_time %></td>
        <td><%= example.again_implement_people %></td>
        <td><button data-toggle="modal" data-target="#myModal" width="30px">edit</button></td>
      </tr>
	  <% end %>
	</table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit Case</h4>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
  
</div>

